<h1>Listing mainoptions</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Image</th>
    <th>Show</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @mainoptions.each do |mainoption| %>
  <tr>
    <td><%= mainoption.name %></td>
    <td><%= mainoption.image %></td>
    <td><%= mainoption.show %></td>
    <td><%= mainoption.description %></td>
    <td><%= link_to 'Show', mainoption %></td>
    <td><%= link_to 'Edit', edit_mainoption_path(mainoption) %></td>
    <td><%= link_to 'Destroy', mainoption, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

