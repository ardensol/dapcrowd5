<% content_for :metas do %>
  <% if @settings.indexable == false %>
    <meta name="robots" content="noindex, nofollow">
  <% end %>
  <%= render 'layouts/facebook_metas' %>
  <%= render 'layouts/mobile_bookmark_metas' %>
<% end %>
<% content_for :stylesheets do %>
  <style type="text/css"><%= raw(@settings.custom_css) %></style>
<% end %>
<% content_for :scripts do %>
  <%= render 'layouts/google_analytics' %>
<% end %>

<% content_for :header do %>
  <%= render 'layouts/social_js' unless @noheader %>
  <%= render 'layouts/navbar' unless @noheader %>
  <%= render 'theme/views/header' unless @noheader %>
<% end %>
<% content_for :footer do %>
  <%= render 'theme/views/footer' unless @nofooter %>
  <%= render 'layouts/customerio' %>
<% end %>
<% content_for :body_bottom do %>
  <%= raw(@settings.custom_js) %>
  <script type="text/javascript" src="//assets.pinterest.com/js/pinit.js"></script>
<% end %>
<%= render :template => 'layouts/base' %>
