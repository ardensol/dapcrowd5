                    <div>
                    <a href="<%= url_for checkout_amount_path(@campaign) %>" class="button hero-button" style="width: 100%; padding: 20px 35px" id="main_cta">
                      <%= @campaign.primary_call_to_action_button %>
                    </a>
                    </div>
