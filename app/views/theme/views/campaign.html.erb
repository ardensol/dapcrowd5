                  <p class="title"><%= reward.title %></p>
                  <% if reward.image_url.present? %><p class="image"><img src="<%= reward.image_url %>"></p><% end %>
                  <p class="description"><%= reward.description %></p>
                  <p class="delivery">Estimated Delivery: <%= reward.delivery_date %></p>
                </a>
              </li>
